<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/biggest_dimen">

    <LinearLayout
        android:id="@+id/llRippleEffect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/medium_dimen"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tvText"
            style="@style/TextViewBoldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/tiny_dimen"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            tools:text="Button Text" />

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="@dimen/medium_dimen"
            android:layout_height="@dimen/medium_dimen"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>